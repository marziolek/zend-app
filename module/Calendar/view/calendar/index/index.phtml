<?php 
$title = 'My calendar';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('calendar', array('action'=>'add'));?>">Add new event</a>
</p>
<table class="table">
<tr>
    <th>Created At</th>
</tr>
<?php foreach ($this->records/*paginator*/ as $record) : ?>
    <tr>
        <td><?php echo $this->escapeHtml($record->created_at);?></td>
    </tr>
<?php endforeach; ?>
</table>

<?php
$calendar = new \BmCalendar\Calendar();
$year = $this->year;
$month = $this->month;
?>
<h2>2014</h2>
<ul class="calendar clearfix">
<?php
  for ($month; $month<13; $month++)
  { 
    $calendar_month = $this->calendar($calendar)->showMonth($year,$month);
    echo '<li class="col-xs-4">'.$calendar_month.'</li>';
  }
?>
</ul>
